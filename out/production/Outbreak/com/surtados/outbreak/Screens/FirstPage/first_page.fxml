<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Box?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.surtados.outbreak.Screens.FirstPage.Controller"
          prefHeight="600.0" prefWidth="800.0" styleClass="start">
    <VBox alignment="CENTER" styleClass="mainBox">
        <children>
            <VBox styleClass="boxCenter" alignment="CENTER">
                <children>
                    <Separator minHeight="250" visible="false"/>
                    <VBox styleClass="menu">
                        <children>
                            <Button text="INICIAR" styleClass="menuButton" contentDisplay="CENTER" fx:id="startButton" onAction="#login"/>
                            <Button text="INSTRUCOES" styleClass="menuButton" fx:id="rulesButton" onAction="#rules"/>
                            <Button text="CREDITOS" styleClass="menuButton" fx:id="creditsButton" onAction="#credits"/>
                            <Button text="SAIR" styleClass="menuButton" fx:id="closeButton" onAction="#closeButton"/>
                        </children>
                    </VBox>
                </children>
            </VBox>
        </children>
    </VBox>
</GridPane>
