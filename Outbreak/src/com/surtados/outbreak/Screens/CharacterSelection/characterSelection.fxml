<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.surtados.outbreak.components.characterBox.CharacterBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.surtados.outbreak.Screens.CharacterSelection.CharacterSelectionController"
          prefHeight="600.0" prefWidth="800.0" styleClass="mainBox">
    <HBox styleClass="secondaryBox">
        <children>
            <VBox alignment="CENTER_LEFT">
                <children>
                    <Separator visible="false" minHeight="20"/>
                    <Label text="Olá Fulano!" textAlignment="LEFT" textFill="white"/>
                    <Label text="Monte o seu time!!" textAlignment="LEFT" textFill="white"/>
                    <Separator visible="false" minHeight="5"/>
                    <GridPane hgap="5" vgap="5" fx:id="gridPersonagens" styleClass="characterList" onContextMenuRequested="#criaGridPane">
                        <CharacterBox fx:id="alice" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="alice"/>
                        <CharacterBox GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="characterBox"/>
                        <CharacterBox GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="characterBox"/>
                    </GridPane>
                </children>
            </VBox>
            <Separator visible="false" minWidth="190"/>
            <VBox>
                <children>
                    <HBox>
                        <children>
                            <Label text="VITÓRIAS: " textFill="white"/>
                            <Separator visible="false" minWidth="15"/>
                            <Label text="DERROTAS: " textFill="white"/>
                        </children>
                    </HBox>
                    <Separator visible="false" minHeight="50"/>
                    <HBox styleClass="teamList">
                        <children>

                        </children>
                    </HBox>
                </children>
                <Separator minHeight="320" visible="false"/>
                <Button fx:id="btnAvancar" text="AVANÇAR" minWidth="225" minHeight="48" styleClass="botaoAvancar" textFill="white"/>
            </VBox>
        </children>
    </HBox>
</GridPane>
